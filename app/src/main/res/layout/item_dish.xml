<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/dish_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/dish_item_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginRight="10dp"
            android:scaleType="center"/>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/dish_item_add"
            android:layout_width="48dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/ic_add"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dish_item_add"
            android:layout_toRightOf="@id/dish_item_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/dish_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#777"
                android:textSize="14dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
